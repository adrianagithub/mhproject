<p id="notice"><%= notice %></p>

<div class="col-12 mr-auto">
  <div id="no-more-tables" class="table-responsive card mb-5"> 
    <div class="text-center card mb-5">
      <table class="table table-hover" id="report">
        <h1>Categories</h1>
        <thead class=“cf”>
          <div class=“row”>
            <tr>
              <strong><th class=“h2” style=“background:none;“>Name</th></strong>
              <strong><th class=“h2” style=“background:none;“>Description</th></strong>
              <th colspan="3"></th>
            </tr>
            <div>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
            <div class="row">
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= link_to 'Show', category %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            </div>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>

<div class="actions center">
  <%= link_to 'New Category', new_category_path,:class => 'btn btn-sm text-uppercase font-weight-bold mb-2' %>
</div>